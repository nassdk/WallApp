<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:paddingHorizontal="@dimen/base_padding_8"
            android:paddingVertical="@dimen/base_padding_12">

            <androidx.cardview.widget.CardView
                android:id="@+id/avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_avatar_placeholder" />

            <androidx.cardview.widget.CardView
                android:id="@+id/name"
                android:layout_width="60dp"
                android:layout_height="14dp"
                android:layout_marginStart="@dimen/base_margin_8"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toEndOf="@id/avatar"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Calvin Watson" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:actionBarItemBackground"
                android:src="@drawable/ic_dots"
                app:layout_constraintBottom_toBottomOf="@id/avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/avatar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/date"
                android:layout_width="60dp"
                android:layout_height="12dp"
                android:layout_marginStart="@dimen/base_margin_8"
                android:layout_marginTop="@dimen/base_margin_8"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toEndOf="@id/avatar"
                app:layout_constraintTop_toBottomOf="@id/name" />

            <androidx.cardview.widget.CardView
                android:id="@+id/text"
                android:layout_width="140dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/base_margin_8"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/textMedium"
                android:layout_width="240dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/base_margin_4"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text" />

            <androidx.cardview.widget.CardView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:layout_marginTop="@dimen/base_margin_12"
                app:cardCornerRadius="@dimen/corner_radius_6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textMedium" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/likes"
                style="@style/Widget.App.TextView.Gray_9EACC2.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_margin_12"
                android:drawableStart="@drawable/ic_like"
                android:drawablePadding="@dimen/base_padding_4"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/comments"
                style="@style/Widget.App.TextView.Gray_9EACC2.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_16"
                android:layout_marginTop="@dimen/base_margin_12"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="@dimen/base_padding_4"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/likes"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_16"
                android:layout_marginTop="@dimen/base_margin_12"
                android:src="@drawable/ic_favorites"
                app:layout_constraintStart_toEndOf="@id/comments"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_20"
            android:background="@color/color_white"
            android:paddingHorizontal="@dimen/base_padding_8"
            android:paddingVertical="@dimen/base_padding_12">

            <androidx.cardview.widget.CardView
                android:id="@+id/avatarFirst"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_avatar_placeholder" />

            <androidx.cardview.widget.CardView
                android:id="@+id/nameFirst"
                android:layout_width="60dp"
                android:layout_height="14dp"
                android:layout_marginStart="@dimen/base_margin_8"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toEndOf="@id/avatarFirst"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Calvin Watson" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:actionBarItemBackground"
                android:src="@drawable/ic_dots"
                app:layout_constraintBottom_toBottomOf="@id/avatarFirst"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/avatarFirst" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dateFirst"
                android:layout_width="60dp"
                android:layout_height="12dp"
                android:layout_marginStart="@dimen/base_margin_8"
                android:layout_marginTop="@dimen/base_margin_8"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toEndOf="@id/avatarFirst"
                app:layout_constraintTop_toBottomOf="@id/nameFirst" />

            <androidx.cardview.widget.CardView
                android:id="@+id/textFirst"
                android:layout_width="140dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/base_margin_8"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarFirst" />

            <androidx.cardview.widget.CardView
                android:id="@+id/textMediumFirst"
                android:layout_width="240dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/base_margin_4"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textFirst" />

            <androidx.cardview.widget.CardView
                android:id="@+id/imageViewSecond"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:layout_marginTop="@dimen/base_margin_12"
                app:cardCornerRadius="@dimen/corner_radius_6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textMediumFirst" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/likesFirst"
                style="@style/Widget.App.TextView.Gray_9EACC2.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_margin_12"
                android:drawableStart="@drawable/ic_like"
                android:drawablePadding="@dimen/base_padding_4"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageViewSecond" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/commentsFirst"
                style="@style/Widget.App.TextView.Gray_9EACC2.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_16"
                android:layout_marginTop="@dimen/base_margin_12"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="@dimen/base_padding_4"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/likesFirst"
                app:layout_constraintTop_toBottomOf="@id/imageViewSecond" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favoritesFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_16"
                android:layout_marginTop="@dimen/base_margin_12"
                android:src="@drawable/ic_favorites"
                app:layout_constraintStart_toEndOf="@id/commentsFirst"
                app:layout_constraintTop_toBottomOf="@id/imageViewSecond" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_20"
            android:background="@color/color_white"
            android:paddingHorizontal="@dimen/base_padding_8"
            android:paddingVertical="@dimen/base_padding_12">

            <androidx.cardview.widget.CardView
                android:id="@+id/avatarSecond"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_avatar_placeholder" />

            <androidx.cardview.widget.CardView
                android:id="@+id/nameSecond"
                android:layout_width="60dp"
                android:layout_height="14dp"
                android:layout_marginStart="@dimen/base_margin_8"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toEndOf="@id/avatarSecond"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Calvin Watson" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:actionBarItemBackground"
                android:src="@drawable/ic_dots"
                app:layout_constraintBottom_toBottomOf="@id/avatarSecond"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/avatarSecond" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dateSecond"
                android:layout_width="60dp"
                android:layout_height="12dp"
                android:layout_marginStart="@dimen/base_margin_8"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintBottom_toBottomOf="@id/avatarSecond"
                app:layout_constraintStart_toEndOf="@id/avatarSecond" />

            <androidx.cardview.widget.CardView
                android:id="@+id/textSecond"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/base_margin_8"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dateSecond" />

            <androidx.cardview.widget.CardView
                android:id="@+id/textMediumSecond"
                android:layout_width="180dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/base_margin_4"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textSecond" />

            <androidx.cardview.widget.CardView
                android:id="@+id/textLargeSecond"
                android:layout_width="240dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/base_margin_4"
                app:cardCornerRadius="@dimen/corner_radius_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textMediumSecond" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/likesSecond"
                style="@style/Widget.App.TextView.Gray_9EACC2.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_margin_12"
                android:drawableStart="@drawable/ic_like"
                android:drawablePadding="@dimen/base_padding_4"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textLargeSecond" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/commentsSecond"
                style="@style/Widget.App.TextView.Gray_9EACC2.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_16"
                android:layout_marginTop="@dimen/base_margin_12"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="@dimen/base_padding_4"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/likesSecond"
                app:layout_constraintTop_toBottomOf="@id/textLargeSecond" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favoritesSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_16"
                android:layout_marginTop="@dimen/base_margin_12"
                android:src="@drawable/ic_favorites"
                app:layout_constraintStart_toEndOf="@id/commentsSecond"
                app:layout_constraintTop_toBottomOf="@id/textLargeSecond" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>