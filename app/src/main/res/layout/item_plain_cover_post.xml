<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="422dp"
    android:layout_marginHorizontal="@dimen/base_margin_4"
    android:background="@drawable/background_rounded_by_six">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/coverImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/gray_9EACC2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/base_margin_8"
        android:layout_marginTop="@dimen/base_margin_12"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_avatar_placeholder" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        style="@style/Widget.App.TextView.White.Bold.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_8"
        android:layout_marginTop="@dimen/base_margin_12"
        android:drawablePadding="@dimen/base_padding_8"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Calvin Watson" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base_margin_8"
        android:background="?android:actionBarItemBackground"
        android:src="@drawable/ic_dots_white"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        style="@style/Widget.App.TextView.White.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_8"
        android:drawableStart="@drawable/ic_global"
        android:drawablePadding="@dimen/base_padding_8"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="Today at 3:42" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/views"
        style="@style/Widget.App.TextView.White.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_8"
        android:drawableStart="@drawable/ic_eye_views"
        android:drawablePadding="@dimen/base_padding_8"
        app:layout_constraintStart_toEndOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="42" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/postDescription"
        style="@style/Widget.App.TextView.White.Bold.18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/base_margin_12"
        android:maxLines="5"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ex veniam dolor officia proident reprehenderit dolore commodo ea fugiat excepteur eu. Enim minim qui ex laboris enim pariatur id do. Sunt ipsum laborum est deserunt adipisicing duis mollit. Aliquip doEx veniam dolor officia proident reprehenderit dolore commodo ea fugiat excepteur eu. Enim minim qui ex laboris enim pariatur id do. Sunt ipsum laborum est deserunt adipisicing duis mollit. Aliquip doEx veniam dolor officia proident reprehenderit dolore commodo ea fugiat excepteur eu. Enim minim qui ex laboris enim pariatur id do. Sunt ipsum laborum est deserunt adipisicing duis mollit. Aliquip do" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/likes"
        style="@style/Widget.App.TextView.White.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_12"
        android:layout_marginBottom="@dimen/base_margin_12"
        android:drawableStart="@drawable/ic_like_white"
        android:drawablePadding="@dimen/base_padding_4"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="41" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/comments"
        style="@style/Widget.App.TextView.White.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_16"
        android:layout_marginBottom="@dimen/base_margin_12"
        android:drawableStart="@drawable/ic_comment_white"
        android:drawablePadding="@dimen/base_padding_4"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/likes"
        tools:text="41" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_16"
        android:layout_marginBottom="@dimen/base_margin_12"
        android:src="@drawable/ic_favorites_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/comments" />

</androidx.constraintlayout.widget.ConstraintLayout>